<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingAlerter"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:Views="clr-namespace:PingAlerter.Views"
        x:Class="PingAlerter.MainWindow"
        mc:Ignorable="d"
        StateChanged="Window_StateChanged"
        Title="PingAlerter" Height="350" Width="525" ResizeMode="CanResizeWithGrip" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" MinHeight="92">
    <Grid UseLayoutRounding="True" Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Views:MonitorTabControlView DataContext="{Binding monitorTabControlViewModel}" x:Name="MonitorTabControl" Grid.Row="0"  Margin="0,0,0.4,0.4" Grid.IsSharedSizeScope="True" Grid.ColumnSpan="2"/>

        <Views:StatusBarView DataContext="{Binding statusBarViewModel}"   Grid.RowSpan="2" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
